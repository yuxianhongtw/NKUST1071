@model List<YX.Core.Models.OpenData>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<form method="get">
    <select name="select">
        <option value="null">不分</option>
        @foreach (var item in ViewBag.Selection)
        {
            <option value="@item.Id" selected="@(ViewBag.Selected==item.Id)">@item.Name</option>
        }
    </select>
    <input name="keyword" value="@ViewBag.Keyword" />
    <button type="submit">查詢</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>服務分類</th>
            <th>資料集名稱</th>
            <th>詳細</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.服務分類</td>
                <td>@item.資料集名稱</td>
                <td>
                    <a class="btn btn-primary" href="/OpenData/Detail/@item.id">連結</a>
                    <a class="btn btn-info" href="/OpenData/Edit/@item.id">編輯</a>
                </td>
            </tr>
        }
    </tbody>
</table>