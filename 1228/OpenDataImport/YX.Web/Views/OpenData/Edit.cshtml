@model YX.Core.Models.OpenData

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>OpenData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="資料集名稱" class="control-label"></label>
                <input asp-for="資料集名稱" class="form-control" />
                <span asp-validation-for="資料集名稱" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="主要欄位說明" class="control-label"></label>
                <input asp-for="主要欄位說明" class="form-control" />
                <span asp-validation-for="主要欄位說明" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="服務分類" class="control-label"></label>
                <input asp-for="服務分類" class="form-control" />
                <span asp-validation-for="服務分類" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts
    {
    <script src="~/js/site.js"></script>
    <script src="~/js/Edit.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('form').on('submit', function () {
                var data = new OpenData();

                data.id = $('input[name = "id"]').val();
                data.資料集名稱 = $('input[name = "資料集名稱"]').val();
                data.主要欄位說明 = $('input[name = "主要欄位說明"]').val();
                data.服務分類 = $('input[name = "服務分類"]').val();

                if (!data.Check()) {
                    alert("輸入的資料不完整");
                    return false;
                }
            });
        });

    </script>
}

